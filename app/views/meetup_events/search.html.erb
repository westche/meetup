<script>
    var grid = document.querySelector('.grid');
    var msnry = new Masonry( grid, {
        // options...
        columnWidth: 30,
        itemSelector: '.grid-item'
    });

    $("div.grid-item").click(function() {
        window.location=$(this).find("a").attr("href"); return false;
    });

</script>
